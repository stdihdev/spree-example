<% address_id = address_type.chars.first %>

<% Nelou::ADDRESS_FIELDS.each do |field| %>
  <% if field == 'gender' %>
    <p class="form-group" id="<%= " #{address_id}gender" %>">
      <%= address_form.label :gender, Spree.t(:gender) %>
      <span class="required">*</span><br/>
      <span id="<%= " #{address_id}gender-selection" %>">
        <%= address_form.select :gender, options_for_select([[Spree.t(:mister), 'm'], [Spree.t(:miss), 'f']], address.gender), { include_blank: true }, {:class => 'required form-control'} %>
      </span>
    </p>
  <% elsif field == "country" %>
    <p class="form-group" id="<%= "#{address_id}country" %>">
      <%= address_form.label :country_id, Spree.t(:country) %><span class="required">*</span>
      <span id="<%= "#{address_id}country-selection" %>">
        <%= address_form.collection_select :country_id, available_countries, :id, :name, { include_blank: true }, {:class => 'required form-control'} %>
      </span>
    </p>
  <% elsif field == "state" %>
    <%= address_field(address_form, :state, address_id) { address_state(address_form, address.country, address_id) } if Spree::Config[:address_requires_state] %>
  <% else %>
    <% next if field == "company" && spree_current_user.designer? && address_id == spree_current_user.try(:bill_address_id) %>
    <% next if field == "alternative_#{address_id}_phone" && !Spree::Config["alternative_#{address_id}_phone"] %>
    <%= address_field(address_form, field.to_sym, address_id) %>
  <% end %>
<% end %>
