<% content_for :page_title do %>
  <%= Spree.t(:sales) %>
<% end %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @sale } %>
<div data-hook="admin_sale_new_form_header">
  <%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @sale_price } %>
</div>
<div data-hook="admin_sale_new_form">
  <%= form_for [:admin, @sale], url: main_app.admin_nelou_sales_url(@product), method: :post do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
  <% end %>
</div>
