<% content_for :page_title do %>
  <%= Spree.t(:new_user) %>
<% end %>
<div data-hook="admin_user_new_form_header">
  <%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @user } %>
</div>
<div data-hook="admin_user_new_form">
  <%= form_for [:admin, @user], url: main_app.admin_nelou_designers_path, method: :post do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div data-hook="admin_user_new_form_buttons">
      <%= render :partial => 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>
